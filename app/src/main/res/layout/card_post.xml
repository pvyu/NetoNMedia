<!--        android:layout_marginTop="@dimen/common_spacing"-->

<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/barrierContent" />-->


<!--        app:buttonIconTint="@color/like_color_selector"-->
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/btnLiked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/common_spacing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrierContent"

        android:button="@drawable/like_icon_selector"
        android:background="@android:color/transparent"

        tools:checked="@sample/posts.json/data/likedByMe"
        tools:text="@sample/posts.json/data/likes"

        style="Widget.AppTheme.LikeCheckBox"
    />










    <TextView
        android:id="@+id/txtLiked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ActionButtons"

        app:layout_constraintStart_toEndOf="@+id/btnLiked"
        app:layout_constraintTop_toBottomOf="@+id/barrierContent"

        android:layout_marginTop="@dimen/common_spacing"
        android:layout_marginStart="@dimen/small_spacing"

        tools:text="1"/>

    <!--        app:tint="@color/ActionButtons"-->
    <ImageButton
        android:id="@+id/btnShared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/baseline_share_24"
        android:background="@android:color/transparent"

        app:layout_constraintStart_toEndOf="@+id/txtLiked"
        app:layout_constraintTop_toBottomOf="@+id/barrierContent"

        android:layout_marginTop="@dimen/common_spacing"
        android:layout_marginStart="@dimen/common_spacing" />

    <TextView
        android:id="@+id/txtShared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ActionButtons"

        android:layout_marginStart="@dimen/small_spacing"
        android:layout_marginTop="@dimen/common_spacing"

        app:layout_constraintStart_toEndOf="@+id/btnShared"
        app:layout_constraintTop_toBottomOf="@+id/barrierContent"

        tools:text="1" />

    <TextView
        android:id="@+id/txtViewed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ActionButtons"

        android:layout_marginTop="@dimen/common_spacing"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/barrierContent"
        tools:text="1" />

    <!--        app:tint="@color/ActionButtons"-->
    <ImageButton
        android:id="@+id/btnViewed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/baseline_remove_red_eye_24"
        android:background="@android:color/transparent"

        app:layout_constraintEnd_toStartOf="@+id/txtViewed"
        app:layout_constraintTop_toBottomOf="@+id/barrierContent"

        android:layout_marginTop="@dimen/common_spacing"
        android:layout_marginEnd="@dimen/small_spacing"/>

</androidx.constraintlayout.widget.ConstraintLayout>