<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/common_spacing"
    tools:context=".MainActivity">

    <!--Как наложить ограничения по максимальному и минимальному размерам
        в процентном соотношении от размеров родительского компонента?-->
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/posts_avatar_size"
        android:layout_height="@dimen/posts_avatar_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:srcCompat="@sample/post_avatars" />

    <TextView
        android:id="@+id/txtAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_spacing"
        android:layout_marginEnd="@dimen/common_spacing"

        android:ellipsize="end"
        android:maxLines="1"

        app:layout_constraintBottom_toTopOf="@id/txtPublished"
        app:layout_constraintEnd_toStartOf="@+id/btnPostMnu"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toTopOf="@+id/avatar"

        app:layout_constraintVertical_chainStyle="spread"
        tools:text="@sample/posts.json/data/author" />

    <TextView
        android:id="@+id/txtPublished"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_spacing"
        android:layout_marginEnd="@dimen/common_spacing"

        android:ellipsize="end"
        android:maxLines="1"

        app:layout_constraintBottom_toBottomOf="@+id/avatar"
        app:layout_constraintEnd_toStartOf="@+id/btnPostMnu"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toBottomOf="@+id/txtAuthor"

        tools:text="@sample/posts.json/data/published" />

    <ImageButton
        android:id="@+id/btnPostMnu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/avatar"
        app:srcCompat="@drawable/baseline_more_vert_24" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierMsgHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="avatar,txtAuthor,txtPublished,btnPostMnu" />

    <!--Не понятно как центрировать текст по ширине-->
    <TextView
        android:id="@+id/txtContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_spacing"

        android:textAlignment="inherit"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/barrierMsgHeader"

        tools:text="@sample/posts.json/data/content" />

    <!--Проблема с отступом от контента до нижнего барьера-->
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="txtContent" />

<!--        app:tint="@color/ActionButtons"-->
    <ImageButton
        android:id="@+id/btnLiked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/baseline_favorite_border_24"
        android:background="@android:color/transparent"

        android:layout_marginTop="@dimen/common_spacing"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrierContent" />

    <TextView
        android:id="@+id/txtLiked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ActionButtons"

        app:layout_constraintStart_toEndOf="@+id/btnLiked"
        app:layout_constraintTop_toBottomOf="@+id/barrierContent"

        android:layout_marginTop="@dimen/common_spacing"
        android:layout_marginStart="@dimen/small_spacing"

        tools:text="1"/>

<!--        app:tint="@color/ActionButtons"-->
    <ImageButton
        android:id="@+id/btnShared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/baseline_share_24"
        android:background="@android:color/transparent"

        app:layout_constraintStart_toEndOf="@+id/txtLiked"
        app:layout_constraintTop_toBottomOf="@+id/barrierContent"

        android:layout_marginTop="@dimen/common_spacing"
        android:layout_marginStart="@dimen/common_spacing" />

    <TextView
        android:id="@+id/txtShared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ActionButtons"

        android:layout_marginStart="@dimen/small_spacing"
        android:layout_marginTop="@dimen/common_spacing"

        app:layout_constraintStart_toEndOf="@+id/btnShared"
        app:layout_constraintTop_toBottomOf="@+id/barrierContent"

        tools:text="1" />

    <TextView
        android:id="@+id/txtViewed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ActionButtons"

        android:layout_marginTop="@dimen/common_spacing"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/barrierContent"
        tools:text="1" />

<!--        app:tint="@color/ActionButtons"-->
    <ImageButton
        android:id="@+id/btnViewed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/baseline_remove_red_eye_24"
        android:background="@android:color/transparent"

        app:layout_constraintEnd_toEndOf="@+id/txtViewed"
        app:layout_constraintTop_toBottomOf="@+id/barrierContent"

        android:layout_marginTop="@dimen/common_spacing"
        android:layout_marginEnd="@dimen/common_spacing"/>


</androidx.constraintlayout.widget.ConstraintLayout>